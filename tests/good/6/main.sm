(module Main imports (StdLib))

(vars (
  (let x 0)
  (let z 0)
))

(functions (

  # result is `y * y`
  (function square (y)
    (begin
        (set! x 0) # resets the `x` to 0
        (set! z 0) # resets the `z` to 0

        (while (< x y) # x=0 < y
          (begin
            (let one 1)
            (set! z (+ y z))
            (set! x (+ x one))
        ) )
        z
    )
  )

  (function main ()
    (begin
      (write! "give me a natural number and I'll compute square of it")
      (let num (read!))
      (let sqr (square num))
      (write! "the square of your number is:")
      sqr
    )
  )
))
